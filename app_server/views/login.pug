extends layout

block content
  h1= title
  p Welcome to - #{title}

  form(method='POST' action='/login' name='frmLogin')
  
    input(
      type='textbox'
      name='username'
      size=30
    )
    br
    input(
      type='password'
      name='password'
      size=30
    )
    br
    p Session: #{mySession}
    br
    input(
      type='submit'
      value='Submit'
    )
